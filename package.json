{
  "name": "react.js-boilerplate",
  "version": "0.0.1-SNAPSHOT",
  "description": "A boilerplate for creating javascript/react based npm packages and webpack apps.",
  "license": "MIT",
  "author": "Alex Bahnisch",
  "homepage": "https://github.com/alexbahnisch/react.js-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexbahnisch/react.js-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/alexbahnisch/react.js-boilerplate/issues"
  },
  "keywords": [
    "boilerplate",
    "javascript",
    "npm",
    "react",
    "webpack"
  ],
  "main": "./src/package/index.js",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "html-webpack-plugin": "^2.28.0",
    "http-server": "^0.10.0",
    "json5": "^0.5.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-livereload-plugin": "^0.11.0"
  },
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "scripts": {
    "app:build": "npm run app:clean && cross-env CONFIG=app webpack --progress -p",
    "app:build-dev": "npm run app:clean && cross-env CONFIG=app NODE_ENV=development webpack --devtool inline-source-map --progress --watch",
    "app:clean": "rm !(*.gitkeep) -rf ./dist/app/*",
    "app:server": "http-server ./dist/app/ -p 8002",
    "app:server-dev": "cross-env CONFIG=app webpack-dev-server --devtool inline-source-map --progress",
    "clean": "npm run app:clean && npm run package:clean",
    "package": "npm run package:compile && npm run package:bundle && npm run package:artifact",
    "package:artifact": "node ./scripts/pre-package.js && cd ./dist/artifacts/ && npm pack ../package",
    "package:bundle": "cross-env CONFIG=package MIN=true webpack && cross-env CONFIG=package webpack && rm ./dist/package/zzz.*",
    "package:clean": "rm !(*.gitkeep) -rf ./dist/package/*",
    "package:compile": "babel ./src/package/ --out-dir ./dist/package/"
  }
}
